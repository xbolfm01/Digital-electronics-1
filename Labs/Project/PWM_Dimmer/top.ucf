#-----------------------------------------------------------------------
# Buttons & switches
#-----------------------------------------------------------------------
# Two push buttons
#NET BTN1        LOC = P94;
NET btn        LOC = P143;

# Two slide switches
NET phA         LOC = P124;
NET phB         LOC = P39;

#-----------------------------------------------------------------------
# Four discrete LEDs
#-----------------------------------------------------------------------
#NET LD3         LOC = P64;
#NET LD2         LOC = P66;
#NET LD1         LOC = P68;
NET led         LOC = P69;

#-----------------------------------------------------------------------
# Four-digit time-multiplexed seven-segment LED display
#-----------------------------------------------------------------------
# LED segments
NET segment<6>   LOC = P56;  # segment a
NET segment<5>   LOC = P53;  # segment b
NET segment<4>   LOC = P60;  # segment c
NET segment<3>   LOC = P58;  # segment d
NET segment<2>   LOC = P57;  # segment e
NET segment<1>   LOC = P54;  # segment f
NET segment<0>   LOC = P61;  # segment g

# Digits
NET anode<3>   LOC = P130;
NET anode<2>   LOC = P129;
NET anode<1>   LOC = P128;
NET anode<0>   LOC = P126;

# Decimal point
NET dp         LOC = P59;

#-----------------------------------------------------------------------
# Clock
#-----------------------------------------------------------------------
NET clk           LOC = P38;